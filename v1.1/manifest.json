{
  "manifest_version": 2,
  "name": "TV Polychroma",
  "short_name": "TV Polychroma",
  "description": "TV Polychroma is a 24/7 WebTV network dedicated to the finest avant-garde television available online.",
  "version": "1.1",
  "minimum_chrome_version": "38",
  "permissions": [ "storage", "unlimitedStorage", "http://*/", "https://*/" ],
  "icons": {
    "16": "assets/16.png",
    "32": "assets/32.png",
    "64": "assets/64.png",
    "128": "assets/128.png"
  },

  "browser_action": {
    "default_icon": "assets/128.png",
    "default_title": "TV Polychroma",
    "default_popup": "index.html"
  },
  
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}